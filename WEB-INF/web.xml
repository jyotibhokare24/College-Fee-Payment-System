<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- AddFeePaymentServlet -->
    <servlet>
        <servlet-name>AddFeePaymentServlet</servlet-name>
        <servlet-class>com.servlet.AddFeePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFeePaymentServlet</servlet-name>
        <url-pattern>/addPayment</url-pattern>
    </servlet-mapping>

    <!-- UpdateFeePaymentServlet -->
    <servlet>
        <servlet-name>UpdateFeePaymentServlet</servlet-name>
        <servlet-class>com.servlet.UpdateFeePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFeePaymentServlet</servlet-name>
        <url-pattern>/updatePayment</url-pattern>
    </servlet-mapping>

    <!-- DeleteFeePaymentServlet -->
    <servlet>
        <servlet-name>DeleteFeePaymentServlet</servlet-name>
        <servlet-class>com.servlet.DeleteFeePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFeePaymentServlet</servlet-name>
        <url-pattern>/deletePayment</url-pattern>
    </servlet-mapping>

    <!-- DisplayFeePaymentsServlet -->
    <servlet>
        <servlet-name>DisplayFeePaymentsServlet</servlet-name>
        <servlet-class>com.servlet.DisplayFeePaymentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayFeePaymentsServlet</servlet-name>
        <url-pattern>/displayPayments</url-pattern>
    </servlet-mapping>

    <!-- ReportCriteriaServlet (for report form page) -->
    <servlet>
        <servlet-name>ReportCriteriaServlet</servlet-name>
        <servlet-class>com.servlet.ReportCriteriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportCriteriaServlet</servlet-name>
        <url-pattern>/reportForm</url-pattern>
    </servlet-mapping>

    <!-- ReportServlet (for generating reports) -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/generateReport</url-pattern>
    </servlet-mapping>

</web-app>
</element>
